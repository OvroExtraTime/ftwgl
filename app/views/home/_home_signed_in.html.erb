<% if @teams.length < 1 %>
<div class="join-team">
  <h2>
    <p><%= link_to "Create a Team", new_team_path %></p>
    <p>or</p>
    <p><%= link_to "Join a Team", teams_path %></p>
  </h2>
</div>
<% else %>
<div class="tournaments-list">
  <h2>Tournaments:</h2>
  <ul class="inline">
    <% @tournaments.each do |tourny| %>
      <li><h3><%= link_to tourny.name, tournament_path(tourny) %></h3></li>
    <% end %>
  </ul>
</div>
<% end %>

<h3>
  <%= link_to "Your Profile", user_path(current_user) %>
</h3>

<% if @teams.length > 0 %>
<h3>Your Teams:</h3>
  <ul class="inline">
    <% @teams.each do |team| %>
      <li><%= link_to "#{team.name}#{team.tag}", team_path(team) %></li>
    <% end %>
  </ul>
<% end %>
