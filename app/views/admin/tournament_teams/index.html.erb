<h1>tournament teams</h1>
<table>
  <tr>
    <th>tournament</th>
    <th>team name</th>
    <th>team tag</th>
    <th></th>
    <th></th>
  </tr>
  <% @teams.each do |team| %>
    <tr>
      <td><%= team.tournament.name %></td>
      <td><%= team.team.name %></td>
      <td><%= team.team.tag %></td>
      <td><%= link_to "edit", edit_admin_tournament_team_path(team) %></td>
      <td><%= link_to "remove", admin_tournament_team_path(team), :method => :delete, :class => 'action destroy', data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
