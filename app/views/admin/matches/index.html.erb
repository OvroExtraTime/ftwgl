<h1>tournament matches</h1>
<table>
  <tr>
    <th>tournament</th>
    <th>home Team</th>
    <th>away Team</th>
    <th>week</th>
    <th>match date</th>
    <th></th>
    <th></th>
  </tr>
  <% @matches.each do |match| %>
    <tr>
      <td><%= match.tournament.name %></td>
      <td><%= match.home_team.team.name + " " + match.home_team.team.tag %></td>
      <td><%= match.away_team.team.name + " " + match.away_team.team.tag %></td>
      <td><%= match.week_num %></td>
      <td><%= match.match_date %></td>
      <td><%= link_to "edit", edit_admin_match_path(match) %></td>
      <td><%= link_to "delete", admin_match_path(match), :method => :delete, :class => 'action destroy', data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
