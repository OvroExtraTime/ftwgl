<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name, label: "name" %>
  <%= f.input :tag, label: "tag" %>
  <%= f.input :join_password, type: :password, label: 'join password', placeholder: 'update password', input_html: { autocomplete: 'off' } %>
  <%= f.input :gravatar_email, label: "gravatar email" %>
  <%= f.input :primary_contact, label: "primary contact" %>
  <%= f.input :secondary_contact, label: "secondary contact" %>
  <%= f.input :website, label: "website" %>
  <%= f.input :irc_channel, label: "irc channel" %>
  <%= f.input :voip, label: "VoIP info", placeholder: "ex. TS3 / 127.0.0.1" %>
  <%= f.input :youtube_channel, label: "youtube user", placeholder: "YouTube username" %>
  <%= f.input :twitch_channel, label: "twitch user", placeholder: "Twitch username" %>
  <%= f.input :description, label: "team desription", as: :text %>


  <%= f.submit "Save Team" %>
<% end %>
