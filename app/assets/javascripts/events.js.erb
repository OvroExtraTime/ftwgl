
var Events = {
	Loading: {
		start: function($elem){
			var $loading = $(Templates.Loading.loading);
			var newHeight = Math.max(50, $elem.height());
			var newWidth = Math.max(50, $elem.width());
			$loading.show();
			$loading.css({
				height: newHeight,
				width: newWidth,
				position: "absolute",
				top:0,
				left:0,
				zIndex: 5
			});
			$elem.css({
				position: "relative",
				height: newHeight,
				width: newWidth
			})
			$elem.append($loading);
		},
		
		end: function($elem){
			$elem.find(".loading").remove();
			$elem.css({
				height: "auto",
				width: "auto"
			});
		}
	},
	
